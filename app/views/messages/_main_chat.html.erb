<div class="main_chat">
  <div class="header chat_head">
    <div class="room_title">中国語の部屋</div>
    <a class="room_finish_btn btn" href="#">チャットを終了する</a>
  </div>
  <div class="chat_area">
    <div class="chat_contents">
      <div class="contents_head">
        <div class="contributor">アメリカ人</div>
        <div class="post_time">##########</div>
      </div>
      <div class="contents_text">完璧な統語論</div>
    </div>
    <div class="chat_contents">
      <div class="contents_head">
        <div class="contributor">部屋の外</div>
        <div class="post_time">##########</div>
      </div>
      <div class="contents_text">意味論</div>
    </div>
  </div>
  <div class="chat_foot">
    <%= form_with model: [@room, @message], html: {class: "post_form"}, local: true do |f| %>
      <div class="pos_for_middle">
        <%= f.text_field :content, class:"pos_for_text", placeholder:"type a message" %>
        <label class="pos_for_image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class:"hidden" %>
        </label>
      </div>
      <%= f.submit "送信", class:"pos_for_send" %>
    <% end %>
  </div>
</div>